{
    "name": "colby-groups",
    "version": "1.0.0",
    "description": "Colby user group management plugin",
    "author": "Brandon Waltz",
    "license": "MIT",
    "scripts": {
        "lint": "colby-package-lint --withphp",
        "testphp": "./vendor/bin/phpunit --bootstrap vendor/autoload.php tests/",
        "testjs": "colby-package-test",
        "test": "colby-package-test --withphp",
        "format": "colby-package-format --withphp",
        "start": "webpack-dev-server --port=9000 --config webpack.config.dev.js",
        "build": "webpack --config webpack.config.prod.js"
    },
    "husky": {
        "hooks": {
            "pre-commit": "colby-package-format --staged --withphp && colby-package-lint --staged --withphp && colby-package-test --staged --withphp"
        }
    },
    "dependencies": {
        "colby-loader": "^2.0.1",
        "lodash": "^4.17.5",
        "prop-types": "^15.5.10",
        "react": "^16.0.0",
        "react-autosuggest": "^9.4.3",
        "react-dom": "^16.10.2"
    },
    "devDependencies": {
        "autoprefixer": "^9.6.1",
        "babel-loader": "^8.0.6",
        "babel-preset-colby": "^1.0.4",
        "clean-webpack-plugin": "^3.0.0",
        "colby-package": "^2.1.12",
        "css-loader": "^3.2.0",
        "mini-css-extract-plugin": "^0.8.0",
        "node-sass": "^4.12.0",
        "optimize-css-assets-webpack-plugin": "^5.0.3",
        "portfinder-sync": "0.0.2",
        "postcss-loader": "^3.0.0",
        "sass-loader": "^8.0.0",
        "style-loader": "^1.0.0",
        "uglifyjs-webpack-plugin": "^2.2.0",
        "webpack": "^4.41.0",
        "webpack-bundle-analyzer": "^3.5.2",
        "webpack-cli": "^3.3.9",
        "webpack-dev-server": "^3.8.1",
        "webpack-notifier": "^1.8.0"
    }
}
